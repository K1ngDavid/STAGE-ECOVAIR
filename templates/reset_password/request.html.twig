{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container mb-5">
        <div class="row">
            <div class="col-12 col-md-11 col-lg-7 col-xl-6 mx-auto">
                <div class="app-branding text-center mb-5">
                    <a class="app-logo"><img class="logo-icon me-2" src="{{ asset('images/logo_ecovair_v2.png') }}" alt="logo"><span class="logo-text">ECOVAIR</span></a>

                </div><!--//app-branding-->
                <div class="app-card p-5 text-center shadow-sm">
                    <h1 class="page-title mb-4">Changer de mot de passe<br><span class="font-weight-light"></span></h1>
                    <div class="mb-4">
                        {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                    </div>
                    <button class="btn btn-primary">Changer son mot de passe</button>
                </div>
            </div><!--//col-->
        </div><!--//row-->
    </div><!--//container-->

    {{ form_end(requestForm) }}
{% endblock %}
